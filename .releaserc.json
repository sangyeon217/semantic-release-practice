{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "‚ú® Features" },
            { "type": "fix", "section": "üêõ Bug Fixes" },
            { "type": "chore", "section": "üõ† Chores" },
            { "type": "docs", "section": "üìù Documentation" },
            { "type": "refactor", "section": "‚ôªÔ∏è Refactoring" },
            { "type": "test", "section": "‚úÖ Tests" },
            { "type": "perf", "section": "‚ö° Performance" }
          ]
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node sync-versions.js ${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    "@semantic-release/changelog",
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "client/package.json",
          "server/package.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]"
      }
    ],
    "@semantic-release/github"
  ]
}